<html>
<head>
    <title>To Do List</title>
</head>
<body>
    <h1>Categories</h1>

    {% if categories is not empty %}
        <p>Here are all your categories:</p>
        <ul>
            {% for category in categories %}
                <li><a href="/categories/{{ category.getId }}">{{ category.getName }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}

    <form action='/categories' method='post'>
        <label for='name'>Category name</label>
        <input id='name' name='name' type='text'>

        <button type='submit'>Add category</button>
    </form>
    <form action='/delete_categories' method='post'>
        <button type='submit'>Clear</button>
    </form>

    {% if categories is not empty %}
    <h2>See tasks associated with the categories of your choice</h2>
        <form action='/task_list' method='get'>
                {% for category in categories %}
                    <label for="taskList">{{ category.getName }}</label>
                    <input type="checkbox" name="taskList[]" value="{{ category.getId }}">
                {% endfor %}
                <button type="submit" name="button">Submit</button>
        </form>
    {% endif %}

    {% if task_list is not empty %}
        <ul>
            {% for task in task_list %}
                <li><a href="/tasks/{{ task.getId }}">{{ task.getDescription }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}
    <hr>
    <p><a href='/'>Home</a></p>
</body>
</html>
